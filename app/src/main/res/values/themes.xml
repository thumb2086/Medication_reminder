<resources>
    <!-- Base application theme. -->
    <style name="Theme.MedicationReminderApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorOnPrimary">@color/onPrimary_light</item>
        <item name="colorPrimaryContainer">@color/primaryContainer_light</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/onSecondary_light</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer_light</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer_light</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary_light</item>
        <item name="colorOnTertiary">@color/onTertiary_light</item>
        <item name="colorTertiaryContainer">@color/tertiaryContainer_light</item>
        <item name="colorOnTertiaryContainer">@color/onTertiaryContainer_light</item>
        <!-- Error color. -->
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/onError_light</item>
        <item name="colorErrorContainer">@color/errorContainer_light</item>
        <item name="colorOnErrorContainer">@color/onErrorContainer_light</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/onBackground_light</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/onSurface_light</item>
        <item name="colorSurfaceVariant">@color/surfaceVariant_light</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariant_light</item>
        <!-- Outline color. -->
        <item name="colorOutline">@color/outline_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        
        <!-- Customize Popup Menu -->
        <item name="actionOverflowMenuStyle">@style/Widget.App.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <!-- Create a specific theme overlay for toolbar popups -->
        <item name="actionBarTheme">@style/ThemeOverlay.App.Toolbar</item> 
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- Explicitly apply popup theme to toolbar overflow menu -->
        <item name="actionOverflowMenuStyle">@style/Widget.App.PopupMenu.Overflow</item>
        <item name="popupTheme">@style/ThemeOverlay.App.PopupMenu</item>
    </style>
    
    <!-- Theme Overlay for Toolbar Popup -->
    <style name="ThemeOverlay.App.Toolbar" parent="ThemeOverlay.Material3.ActionBar">
         <item name="actionOverflowMenuStyle">@style/Widget.App.PopupMenu.Overflow</item>
         <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
         <item name="android:popupMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>

    <style name="ThemeOverlay.App.PopupMenu" parent="ThemeOverlay.Material3.Light">
        <!-- This forces the popup theme correctly -->
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Custom Popup Menu Style -->
    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:overlapAnchor">false</item>
        <!-- Removed android:dropDownVerticalOffset -->
    </style>

    <style name="Widget.App.PopupMenu.Overflow" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <!-- Removed android:dropDownVerticalOffset -->
    </style>

    <!-- Character Themes -->
    <style name="Theme.MedicationReminderApp.Kuromi" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_kuromi</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorPrimaryContainer">@color/primaryContainer_kuromi</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer_kuromi</item>
        
        <item name="actionOverflowMenuStyle">@style/Widget.App.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="actionBarTheme">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="Theme.MedicationReminderApp.MyMelody" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_mymelody</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorPrimaryContainer">@color/primaryContainer_mymelody</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer_mymelody</item>

        <item name="actionOverflowMenuStyle">@style/Widget.App.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="actionBarTheme">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="Theme.MedicationReminderApp.Cinnamoroll" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_cinnamoroll</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorPrimaryContainer">@color/primaryContainer_cinnamoroll</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer_cinnamoroll</item>

        <item name="actionOverflowMenuStyle">@style/Widget.App.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="actionBarTheme">@style/ThemeOverlay.App.Toolbar</item>
    </style>
</resources>