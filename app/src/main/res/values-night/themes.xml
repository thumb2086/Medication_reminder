<resources>
    <!-- Base application theme. -->
    <style name="Theme.MedicationReminderApp" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorPrimaryContainer">@color/primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/onTertiary</item>
        <item name="colorTertiaryContainer">@color/tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/onTertiaryContainer</item>
        <!-- Error color. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>
        <item name="colorErrorContainer">@color/errorContainer</item>
        <item name="colorOnErrorContainer">@color/onErrorContainer</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorSurfaceVariant">@color/surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariant</item>
        <!-- Outline color. -->
        <item name="colorOutline">@color/outline</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Larger font sizes -->
        <item name="android:textViewStyle">@style/ReallyLargeTextViewStyle</item>
        <item name="textAppearanceBodyLarge">@style/Theme.MedicationReminderApp.TextAppearance.BodyLarge</item>
        <item name="textAppearanceTitleLarge">@style/Theme.MedicationReminderApp.TextAppearance.TitleLarge</item>
        <item name="textAppearanceHeadlineLarge">@style/Theme.MedicationReminderApp.TextAppearance.HeadlineLarge</item>
    </style>

    <style name="Theme.MedicationReminderApp.NoActionBar" parent="Theme.MedicationReminderApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ReallyLargeTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.MedicationReminderApp.TextAppearance.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.MedicationReminderApp.TextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.MedicationReminderApp.TextAppearance.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
    </style>

    <!-- Accent Color Themes -->
    <style name="Theme.MedicationReminderApp.Pink" parent="Theme.MedicationReminderApp.NoActionBar">
        <item name="colorSecondary">@color/accent_pink</item>
    </style>

    <style name="Theme.MedicationReminderApp.Blue" parent="Theme.MedicationReminderApp.NoActionBar">
        <item name="colorSecondary">@color/accent_blue</item>
    </style>

    <style name="Theme.MedicationReminderApp.Green" parent="Theme.MedicationReminderApp.NoActionBar">
        <item name="colorSecondary">@color/accent_green</item>
    </style>

    <style name="Theme.MedicationReminderApp.Purple" parent="Theme.MedicationReminderApp.NoActionBar">
        <item name="colorSecondary">@color/accent_purple</item>
    </style>

    <style name="Theme.MedicationReminderApp.Orange" parent="Theme.MedicationReminderApp.NoActionBar">
        <item name="colorSecondary">@color/accent_orange</item>
    </style>

</resources>