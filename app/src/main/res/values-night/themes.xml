<resources>
    <!-- Base application theme. -->
    <style name="Theme.MedicationReminderApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Text sizes -->
        <item name="android:textSize">20sp</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/onPrimary_dark</item>
        <item name="colorPrimaryContainer">@color/primaryContainer_dark</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/onSecondary_dark</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer_dark</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer_dark</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary_dark</item>
        <item name="colorOnTertiary">@color/onTertiary_dark</item>
        <item name="colorTertiaryContainer">@color/tertiaryContainer_dark</item>
        <item name="colorOnTertiaryContainer">@color/onTertiaryContainer_dark</item>
        <!-- Error color. -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/onError_dark</item>
        <item name="colorErrorContainer">@color/errorContainer_dark</item>
        <item name="colorOnErrorContainer">@color/onErrorContainer_dark</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/onBackground_dark</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/onSurface_dark</item>
        <item name="colorSurfaceVariant">@color/surfaceVariant_dark</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariant_dark</item>
        <!-- Outline color. -->
        <item name="colorOutline">@color/outline_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- Character Themes -->
    <style name="Theme.MedicationReminderApp.Kuromi" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary_kuromi</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">@color/primaryContainer_kuromi</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer_kuromi</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="android:titleTextColor">#FFFFFF</item>
    </style>

    <style name="Theme.MedicationReminderApp.MyMelody" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary_mymelody</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">@color/primaryContainer_mymelody</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer_mymelody</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="android:titleTextColor">#FFFFFF</item>
    </style>

    <style name="Theme.MedicationReminderApp.Cinnamoroll" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary_cinnamoroll</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">@color/primaryContainer_cinnamoroll</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer_cinnamoroll</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="android:titleTextColor">#FFFFFF</item>
    </style>
</resources>