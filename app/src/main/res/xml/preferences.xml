<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/connection_settings">
        <Preference
            app:key="wifi_settings"
            app:title="@string/wifi_settings"
            app:summary="@string/wifi_settings_summary"
            app:icon="@drawable/ic_wifi" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/appearance_settings">

        <ListPreference
            app:key="theme"
            app:title="@string/theme"
            app:summary="%s"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:defaultValue="system"
            app:icon="@drawable/ic_palette" />

        <ListPreference
            app:key="language"
            app:title="@string/language"
            app:summary="%s"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:defaultValue="system"
            app:icon="@drawable/ic_language" />

        <ListPreference
            app:key="character"
            app:title="@string/character"
            app:summary="%s"
            app:entries="@array/character_entries"
            app:entryValues="@array/character_values"
            app:defaultValue="kuromi"
            app:icon="@drawable/ic_face" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/update_settings">
        <ListPreference
            app:key="update_channel"
            app:title="@string/update_channel"
            app:summary="%s"
            app:entries="@array/update_channel_entries"
            app:entryValues="@array/update_channel_values"
            app:defaultValue="stable"
            app:icon="@drawable/ic_update" />

        <Preference
            app:key="check_for_updates"
            app:title="@string/check_for_updates"
            app:icon="@drawable/ic_update"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/developer_settings">

        <SwitchPreferenceCompat
            app:key="engineering_mode"
            app:title="@string/engineering_mode"
            app:summary="@string/engineering_mode_summary"
            app:defaultValue="false"
            app:icon="@drawable/ic_developer_mode" />

    </PreferenceCategory>

    <PreferenceCategory app:title="關於">
        <Preference
            app:key="app_author"
            app:title="作者"
            app:summary="Thumb2086"
            app:selectable="false"
            app:icon="@drawable/ic_face" />

        <Preference
            app:key="app_version"
            app:title="版本"
            app:summary="1.0.0"
            app:selectable="false"
            app:icon="@drawable/ic_update" />
    </PreferenceCategory>

</PreferenceScreen>
